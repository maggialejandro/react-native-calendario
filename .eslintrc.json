{
  "root": true,
  "extends": ["@react-native-community", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "useTabs": false,
        "avoidEscape": true,
        "trailingComma": "es5",
        "arrowParens": "always",
        "singleQuote": true
      }
    ]
  }
}
