{
  "extends": [
    "airbnb"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "env": {
    "es6": true,
    "jasmine": true
  },
  "rules": {
    "react/forbid-prop-types": "warn",
    "react/jsx-filename-extension": [
      "off", { "extensions": [".js", ".jsx"] }
    ],

    "class-methods-use-this": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "no-undef": 0,
    "no-underscore-dangle": "off",
    "no-use-before-define": 0,
    "import/no-unresolved": false,
    "import/extensions": false
  },
  "globals": {
    "__DEV__": true,
    "window": true
  }
}
